{
  "compilerOptions": {
    "strict": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true, 
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts", "**/*.spec.ts"
  ]
}
